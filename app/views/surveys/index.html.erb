<div style="margin-top: 10px;" class="clearfix public-header">
  <h4 class="pull-left"> Survey Lists </h4>
  <%= link_to 'Create New Survey', new_survey_path, class: 'btn btn-primary pull-right' %>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Create Date</th>
    <th>Checklist</th>
    <th>Creator</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @surveys.each do |survey| %>
      <tr>
        <td>#<%= survey.id %></td>
        <td><%= survey.title %></td>
        <td><%= survey.created_at.strftime('%d/%m/%Y') %></td>
        <td>
          <%= link_to pluralize(survey.checklists.count, 'Item'), edit_survey_path(survey) %>
        </td>
        <td><%= survey.user.name if survey.user.present? %></td>
        <td>
          <%= link_to edit_survey_path(survey), class: 'btn btn-warning btn-sm', title: 'Edit' do %>
              <i class="fa fa-pencil"></i>
          <% end %>
          <%= link_to survey_path(survey), method: :delete, class: 'btn btn-danger btn-sm', title: 'Delete' do %>
              <i class="fa fa-trash"></i>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>